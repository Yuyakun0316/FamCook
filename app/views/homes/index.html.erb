
<div class="home-container">
  <!-- カレンダー -->
  <div class="calendar-card">
    <h2>今月の献立記録（2025年11月）</h2>
    <!-- 仮カレンダー（後でJSやgemで実装可能） -->
    <table class="calendar-table">
      <tr>
        <th>日</th><th>月</th><th>火</th><th>水</th><th>木</th><th>金</th><th>土</th>
      </tr>

      <% @calendar_dates.each_slice(7) do |week| %>
      <tr>
        <% week.each do |date| %>
          <td class="<%= 'today' if date == Date.current %>">
            <div class="calendar-date"><%= date.day %></div>

              <% @meals_by_date[date]&.each do |meal| %>
                <div class="meal-icon" title="<%= meal.title %>">
                  <%= icon_for(meal.icon_type) %>
                </div>
              <% end %>
            </td>
          <% end %>
      </tr>
      <% end %>
    </table>
  </div>

  <!-- 投稿ボタン -->
    <%= link_to "📸 今日のご飯を投稿する", new_meal_path, class: "post-button" %>
  
  <!-- メッセージ欄（仮） -->
  <div class="message-card">
    <div class="message-header">
      👪 家族のメッセージ
      <span class="message-link">全て見る</span>
    </div>
    <p class="message-comment">まだメッセージはありません。</p>
  </div>
</div>